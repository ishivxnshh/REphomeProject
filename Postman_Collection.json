{
	"info": {
		"name": "Rephome API",
		"description": "API collection for Rephome - Mobile Repair Booking System",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5000/api",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('token', jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/register",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('token', jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "login"]
						}
					}
				},
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/auth/me",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "me"]
						}
					}
				}
			]
		},
		{
			"name": "Bookings",
			"item": [
				{
					"name": "Create Booking",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"John Doe\",\n    \"phone\": \"1234567890\",\n    \"email\": \"john@example.com\",\n    \"address\": \"123 Main St, Mathura\",\n    \"brandName\": \"Apple\",\n    \"deviceModel\": \"iPhone 14\",\n    \"issue\": \"screen-crack\",\n    \"description\": \"Screen is completely cracked\",\n    \"preferredDate\": \"2024-12-25\",\n    \"preferredTime\": \"09:00\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/bookings",
							"host": ["{{baseUrl}}"],
							"path": ["bookings"]
						}
					}
				},
				{
					"name": "Verify OTP",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"bookingId\": \"RPH88901964\",\n    \"otp\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/bookings/verify-otp",
							"host": ["{{baseUrl}}"],
							"path": ["bookings", "verify-otp"]
						}
					}
				},
				{
					"name": "Resend OTP",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"bookingId\": \"RPH88901964\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/bookings/resend-otp",
							"host": ["{{baseUrl}}"],
							"path": ["bookings", "resend-otp"]
						}
					}
				},
				{
					"name": "Get My Bookings",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/bookings",
							"host": ["{{baseUrl}}"],
							"path": ["bookings"]
						}
					}
				},
				{
					"name": "Get Single Booking",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/bookings/:id",
							"host": ["{{baseUrl}}"],
							"path": ["bookings", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "BOOKING_ID_HERE"
								}
							]
						}
					}
				},
				{
					"name": "Update Booking",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"description\": \"Updated description\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/bookings/:id",
							"host": ["{{baseUrl}}"],
							"path": ["bookings", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "BOOKING_ID_HERE"
								}
							]
						}
					}
				},
				{
					"name": "Cancel Booking",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/bookings/:id",
							"host": ["{{baseUrl}}"],
							"path": ["bookings", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "BOOKING_ID_HERE"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "Shops",
			"item": [
				{
					"name": "Get Nearby Shops",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/shops/nearby?address=Mathura",
							"host": ["{{baseUrl}}"],
							"path": ["shops", "nearby"],
							"query": [
								{
									"key": "address",
									"value": "Mathura"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:5000/api/health",
					"protocol": "http",
					"host": ["localhost:5000"],
					"path": ["api", "health"]
				}
			}
		}
	]
}

